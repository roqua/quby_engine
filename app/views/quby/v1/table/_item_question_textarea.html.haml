- available_width = question.presentation == :horizontal ? 100 : 66
- optionclasses =  [os_cycle]
%td.item{:class => os_cycle, :style => "width:#{available_width/(table.columns)}%", :rowspan => question.row_span, :colspan => question.col_span, :data => question.extra_data}
  .fields{:class => question.type, :id => question.html_id}
    = text_area :answer, question.key, :rows => question.lines, :cols => question.cols, :autocomplete => question.autocomplete, :class => question.type
    = validations
