=marukufix(question.title, "answer_#{question.key}")
.description-and-fields
  .fields{:id => question.html_id}
    - question.options.each do |opt|
      - next if opt.inner_title
      - checked = @answer.send(opt.key) == 1
      - next if( not checked)
      - show_values = (question.show_values == true or question.show_values == :all or question.show_values == :paged)
      .option{:class => show_values ? "show_values" : nil}
        .labelwrapper
          - if show_values
            .value= opt.value
          %label(for="answer_#{opt.key}")
            %span
              -unless opt.description.blank?
                :markdown
                  #{raw opt.description}
              - else
                Aangevinkt
        - unless opt.questions.empty?
          .subquestions= render :partial => "quby/answers/print/item", :collection => opt.questions,  :locals => {:subquestion => true}
